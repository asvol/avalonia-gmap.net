<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Asv.Avalonia.GMap"
        x:DataType="controls:MapPolygonViewModel">
  <Design.PreviewWith>
    <controls:MapPolygon Width="30" Height="30" />
  </Design.PreviewWith>

  <Style Selector="controls|MapPolygon">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
          <Grid>
              <Polygon Fill="Gray" StrokeThickness="1" Stroke="White" Opacity="0.3" />
		  </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
